{
  "version": "0.0.0",
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "useWorkspaces": true,
  "packages": ["packages/core/*", "packages/patterns/*", "packages/examples/*"],
  "command": {
    "version": {
      "ignoreChanges": ["*.md"],
      "npmClient": "npm",
      "message": "chore(release): publish"
    },
    "publish": {
      "npmClient": "npm"
    }
  }
}
